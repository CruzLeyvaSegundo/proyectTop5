<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewRegMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Ingrese sus datos:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="@dimen/activity_text_size_small"
        android:text=" "
        android:id="@+id/textViewRegEmailLabel"
        android:layout_width="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="55dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_height="40dp"
        android:paddingLeft="@dimen/activity_text_padding"
        android:paddingRight="@dimen/activity_text_padding"
        android:id="@+id/editTextRegEmail"
        android:background="@drawable/text_border_selector"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_width="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/textViewRegEmailLabel"
        app:layout_constraintTop_toBottomOf="@+id/textViewRegEmailLabel"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textViewRegEmailLabel"
        android:layout_marginTop="1dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="@dimen/activity_text_padding"
        android:text=" "
        android:textColor="@color/alert"
        android:id="@+id/textViewRegEmailMessage"
        android:layout_width="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/editTextRegEmail"
        app:layout_constraintTop_toBottomOf="@+id/editTextRegEmail"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/editTextRegEmail"
        android:layout_marginTop="-3dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="@dimen/activity_text_size_small"
        android:text=" "
        android:id="@+id/textViewRegUserPasswordLabel"
        android:layout_width="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/textViewRegEmailMessage"
        app:layout_constraintTop_toBottomOf="@+id/textViewRegEmailMessage"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textViewRegEmailMessage"
        android:layout_marginTop="34dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:layout_height="40dp"
        android:paddingLeft="@dimen/activity_text_padding"
        android:paddingRight="@dimen/activity_text_padding"
        android:id="@+id/editTextRegUserPassword"
        android:background="@drawable/text_border_selector"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_width="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/textViewRegUserPasswordLabel"
        app:layout_constraintTop_toBottomOf="@+id/textViewRegUserPasswordLabel"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textViewRegUserPasswordLabel"
        android:layout_marginTop="6dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="@dimen/activity_text_padding"
        android:text=" "
        android:textColor="@color/alert"
        android:id="@+id/textViewUserRegPasswordMessage"
        android:layout_width="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/editTextRegUserPassword"
        app:layout_constraintTop_toBottomOf="@+id/editTextRegUserPassword"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/editTextRegUserPassword"
        android:layout_marginTop="6dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="@dimen/activity_text_size_small"
        android:text=" "
        android:id="@+id/textViewRegGivenNameLabel"
        android:layout_width="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/textViewUserRegPasswordMessage"
        app:layout_constraintTop_toBottomOf="@+id/textViewUserRegPasswordMessage"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textViewUserRegPasswordMessage"
        android:layout_marginTop="33dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <EditText
        android:layout_height="40dp"
        android:paddingLeft="@dimen/activity_text_padding"
        android:paddingRight="@dimen/activity_text_padding"
        android:id="@+id/editTextRegGivenName"
        android:background="@drawable/text_border_selector"
        android:hint="Name"
        android:inputType="textPersonName"
        android:layout_width="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/textViewRegGivenNameLabel"
        app:layout_constraintTop_toBottomOf="@+id/textViewRegGivenNameLabel"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textViewRegGivenNameLabel"
        android:layout_marginTop="2dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="@dimen/activity_text_padding"
        android:text=" "
        android:textColor="@color/alert"
        android:id="@+id/textViewRegGivenNameMessage"
        android:layout_width="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/editTextRegGivenName"
        app:layout_constraintTop_toBottomOf="@+id/editTextRegGivenName"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/editTextRegGivenName"
        android:layout_marginTop="-7dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <Space
        android:layout_height="10dp"
        android:id="@+id/space_about_2"
        android:layout_width="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/textViewRegGivenNameMessage"
        app:layout_constraintTop_toBottomOf="@+id/textViewRegGivenNameMessage"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textViewRegGivenNameMessage"
        android:layout_marginTop="25dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/signUp"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/button_selector"
        android:text="Sign up"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/activity_button_text_size"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/space_about_2"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/space_about_2"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/space_about_2" />
</android.support.constraint.ConstraintLayout>